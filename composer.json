{
    "name": "phpoker/poker",
    "version": "1.0.0",
    "description": "A comprehensive PHP library for working with Poker data and operations.",
    "keywords": ["php", "poker", "texas", "texas hold em", "hold em"],
    "license": "MIT",
    "authors": [
        {
            "name": "Nick Poulos",
            "email": "nick@nickpoulos.info"
        }
    ],
    "require": {
        "php": "^8.2.0",
        "archtechx/enums": "^1.1",
        "illuminate/support": "^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.13.7",
        "pestphp/pest": "^2.28.1",
        "phpstan/phpstan": "^1.10.50",
        "rector/rector": "^0.18.13",
        "symfony/var-dumper": "^6.4.0|^7.0.0"
    },
    "autoload": {
        "psr-4": {
            "PHPoker\\Poker\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "refacto": "rector",
        "lint": "pint",
        "test:refacto": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi --memory-limit=512M",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:refacto",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
